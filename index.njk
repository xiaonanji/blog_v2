{% set pinned = false %}
{% set stickers = false %}
{% for post in collections.posts %}
  {% if post.fileSlug == "always_on_top" %}
    {% set pinned = post %}
  {% endif %}
  {% if post.fileSlug == "stickers" %}
    {% set stickers = post %}
  {% endif %}
{% endfor %}

{% if pinned or stickers %}
<div id="Always on top">
  <h3>Always on top</h3>
  <ul>
    {% if pinned %}
    <li><a href="{{ pinned.url | url }}">{{ pinned.data.title or "Always on top" }}</a></li>
    {% endif %}
    {% if stickers %}
    <li><a href="{{ stickers.url | url }}">{{ stickers.data.title or "Stickers" }}</a></li>
    {% endif %}
    <li><a href="https://pythonformatter.seanji.net/" target="_blank" rel="noopener noreferrer">Python formatter</a></li>
  </ul>
</div>
{% endif %}

<div id="posts">
  <h3>Posts</h3>
  {% set tagList = collections.tagList or [] %}
  {% if tagList.length %}
  <div id="tag-filter">
    {% for tag in tagList %}
      <button type="button" class="tag-chip" data-tag="{{ tag }}">{{ tag }}</button>
    {% endfor %}
  </div>
  {% endif %}

  <ul id="post-list">
    {# Newest first #}
    {% for post in collections.posts | reverse %}
      {% if post.fileSlug != "always_on_top" and post.fileSlug != "stickers" %}
        <li data-tags="{{ (post.data.tags or []) | join('|') }}">
          <a href="{{ post.url | url }}">{{ post.data.title or post.url }}</a>
          <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

<style>
  /* Highlight selected tags */
  .tag-chip {
    border: 1px solid #4a4a4a;
    background: #1f1f1f;
    color: #d6d6d6;
  }
  .tag-chip:hover {
    border-color: #7a672d;
    background: #262626;
  }
  .tag-chip.active {
    background: #3a2f12;
    color: #e3e3e3;
    border-color: var(--primary);
  }
</style>

<script>
(() => {
  const tagButtons = Array.from(document.querySelectorAll("[data-tag]"));
  const posts = Array.from(document.querySelectorAll("#post-list li"));
  const selected = new Set();

  function applyFilter() {
    if (!selected.size) {
      posts.forEach((li) => {
        li.hidden = false;
      });
      return;
    }

    posts.forEach((li) => {
      const tags = (li.dataset.tags || "").split("|").filter(Boolean);
      const match = tags.some((tag) => selected.has(tag));
      li.hidden = !match;
    });
  }

  tagButtons.forEach((btn) => {
    btn.addEventListener("click", () => {
      const tag = btn.dataset.tag;
      if (selected.has(tag)) {
        selected.delete(tag);
        btn.classList.remove("active");
      } else {
        selected.add(tag);
        btn.classList.add("active");
      }
      applyFilter();
    });
  });

  applyFilter();
})();
</script>
